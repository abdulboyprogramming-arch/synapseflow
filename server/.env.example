# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/synapseflow
REDIS_URL=redis://localhost:6379

# JWT Secrets
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_change_in_production

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_or_app_password
EMAIL_FROM=SynapseFlow <noreply@synapseflow.com>
EMAIL_ENABLED=false # Set to true in production

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug # error, warn, info, debug

# Security
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=1

# Session
SESSION_SECRET=your_session_secret_change_in_production
SESSION_MAX_AGE=86400000 # 24 hours in milliseconds

# API Keys (optional)
SENDGRID_API_KEY=your_sendgrid_api_key
STRIPE_API_KEY=your_stripe_api_key
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_api_key

# Feature Flags
FEATURE_TEAM_CHAT=true
FEATURE_VIDEO_UPLOAD=true
FEATURE_AI_RECOMMENDATIONS=false
FEATURE_PAYMENT=false

# Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Admin
ADMIN_EMAIL=admin@synapseflow.com
ADMIN_PASSWORD=admin123

# Debug
DEBUG=true
VERBOSE_LOGGING=false
